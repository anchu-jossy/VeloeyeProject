<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_margin="5dp"
    app:cardElevation="2dp">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivImage_new"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:id="@+id/ll_bikelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ivImage_new"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textview_bikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeuib"
                android:text="ram kumar"
                android:textColor="#303030"
                android:textSize="@dimen/md_listitem_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoeui"
                android:text="eye 3"
                android:textColor="#303030" />

            <TextView
                android:id="@+id/textView_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoeui"
                android:text="red"
                android:textColor="#303030" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_bikelist"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/spinner_actions"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:background="@drawable/bg_red_rounded"
                android:padding="5dp"
                android:popupBackground="@drawable/bg_spinnerlist"
                android:text="@string/actions"
                android:textColor="@android:color/white"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>