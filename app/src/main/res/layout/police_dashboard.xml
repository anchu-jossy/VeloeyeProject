<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_scan_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView_scan_police"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/scan" />

            <TextView
                android:layout_width="90dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="@string/scan_a_sticker"
                android:textColor="@android:color/black" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stolen_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:onClick="onClick"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageview_stolen_police"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:src="@drawable/stolen" />
            <TextView
                android:layout_width="90dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="@string/stolen_a_bike"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_profile_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageview_profile_police"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:src="@drawable/policeicon_head" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/segoeui"
                android:text="@string/my_profile"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contact_police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:onClick="onClick"
            android:orientation="vertical"

            android:padding="5dp">

            <ImageView
                android:id="@+id/imageview_contact_police"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:src="@drawable/contact" />
            <TextView
                android:layout_width="90dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="@string/contact_veloeye"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:onClick="onClick"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="@string/login_text"
            android:textColor="@android:color/black" />

    </LinearLayout>
</LinearLayout>